@model List<NewAgeUI.ViewModels.AdminViewModel>
@{
  ViewData["Title"] = "Admin";
}

<div class="row row-height-3 border-bottom border-white">
  <div class="col">Full Name</div>
  <div class="col">Email</div>
  <div class="col">Access Permission</div>
</div>

@foreach (var employee in Model)
{
  <div class="row row-height-3 align-items-center mt-3 bg-secondary">
    <div class="col">
      <a asp-action="View" asp-route-employeeId="@employee.Id">
        @employee.FullName
      </a>
    </div>
    <div class="col">@employee.EmailAddress</div>
    <div class="col">@employee.AccessPermission</div>
  </div>
}